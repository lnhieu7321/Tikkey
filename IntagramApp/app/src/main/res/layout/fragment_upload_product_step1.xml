<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    tools:context=".Fragment.UploadProductStep1Fragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:ignore="UselessParent"
            android:padding="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Upload Cover Media"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10">
                <Button
                    android:layout_weight="5"
                    android:text="Open Gallery"
                    android:textAllCaps="false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <Button
                    android:layout_weight="5"
                    android:text="Open Camera"
                    android:textAllCaps="false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <TextView
                android:text="Product Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:background="@drawable/edittext_bacground"
                android:layout_width="match_parent"
                android:layout_height="40dp"/>
            <TextView
                android:text="Product Category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <Spinner

                android:id="@+id/sp_category"
                android:layout_gravity="center_horizontal|center"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:entries="@array/category_arrays"
                android:prompt="@string/Category_prompt"
                />
            <TextView
                android:text="Add description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:padding="10dp"
                android:gravity="top"
                android:inputType="textMultiLine"
                android:maxHeight="200dp"
                android:scrollbars="vertical"
                android:background="@drawable/edittext_bacground"/>
            <Switch
                android:layout_width="match_parent"
                android:text="Public Searchable"
                android:layout_height="wrap_content"/>
            <Switch
                android:layout_width="match_parent"
                android:text="Show Product in LIVE"
                android:layout_height="wrap_content"/>
            <Switch
                android:layout_width="match_parent"
                android:text="Dangerous Goods"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="Currency"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <Spinner

                android:id="@+id/sp_currency"
                android:layout_gravity="center_horizontal|center"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:entries="@array/currency_arrays"
                android:prompt="@string/currency_prompt"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pricing"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="0.00"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Stock"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="1"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Size Chart"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10">
                <Button
                    android:layout_weight="5"
                    android:text="Open Gallery"
                    android:textAllCaps="false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <Button
                    android:layout_weight="5"
                    android:text="Open Camera"
                    android:textAllCaps="false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10">
                <Button
                    android:layout_weight="5"
                    android:text="CANCEL"
                    android:textAllCaps="false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <Button
                    android:layout_weight="5"
                    android:text="NEXT"
                    android:textAllCaps="false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</FrameLayout>